{
  "name": "mes-mi-export-service",
  "version": "0.0.1",
  "author": "DVSA",
  "license": "MIT",
  "description": "A service to export test results to legacy MI",
  "homepage": "https://github.com/dvsa/mes-mi-export-service#README.md",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dvsa/mes-mi-export-service.git"
  },
  "bugs": {
    "url": "https://github.com/dvsa/mes-mi-export-service/issues"
  },
  "scripts": {
    "clean": "rimraf build artefacts",
    "compile": "rm -rf build && tsc",
    "compile-no-emit": "tsc --noEmit -p .",
    "lint": "eslint -c .eslintrc.js --ext .ts src",
    "lint:fix": "eslint --fix -c .eslintrc.js --ext .ts src",
    "package": "./package.sh",
    "postci": "npm run bootstrap",
    "prepush": "npm run security-scan && npm run lint && npm test",
    "security-scan": "git secrets --scan && git log -p | scanrepo",
    "start": "npm run compile && sls offline start",
    "test": "jest src --runInBand",
    "test:coverage": "npm run test -- --coverage",
    "prepare": "husky install"
  },
  "dependencies": {
    "@aws-sdk/client-secrets-manager": "^3.435.0",
    "@dvsa/mes-microservice-common": "1.0.2",
    "axios": "^1.5.1",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "oracledb": "^6.2.0"
  },
  "devDependencies": {
    "@dvsa/mes-test-schema": "3.42.5",
    "@types/aws-lambda": "^8.10.125",
    "@types/jest": "^29.5.8",
    "@types/node": "^18.18.6",
    "@types/oracledb": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "eslint": "^8.52.0",
    "eslint-plugin-import": "^2.28.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.0.2",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "rimraf": "^5.0.5",
    "serverless": "^3.35.2",
    "serverless-offline": "^13.2.0",
    "serverless-webpack": "^5.13.0",
    "source-map-support": "^0.5.21",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.0",
    "ts-node": "^10.9.1",
    "typemoq": "^2.1.0",
    "typescript": "^5.2.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "yamljs": "^0.3.0"
  },
  "jest": {
    "coverageProvider": "v8",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.(ts)$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.json"
        }
      ]
    }
  },
  "lint-staged": {
    "./src/**/*.ts": [
      "npm run lint:fix"
    ]
  }
}
