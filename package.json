{
  "name": "mes-mi-export-service",
  "version": "0.0.1",
  "author": "DVSA",
  "license": "MIT",
  "description": "A service to export test results to legacy MI",
  "homepage": "https://github.com/dvsa/mes-mi-export-service#README.md",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dvsa/mes-mi-export-service.git"
  },
  "bugs": {
    "url": "https://github.com/dvsa/mes-mi-export-service/issues"
  },
  "scripts": {
    "clean": "rimraf build artefacts coverage",
    "compile": "rm -rf build && tsc",
    "compile-no-emit": "tsc --noEmit -p .",
    "lint": "eslint -c .eslintrc.js --ext .ts src",
    "lint:fix": "eslint --fix -c .eslintrc.js --ext .ts src",
    "package": "./package.sh",
    "postci": "npm run bootstrap",
    "prepush": "npm run security-scan && npm run lint && npm test",
    "security-scan": "git secrets --scan && git log -p | scanrepo",
    "start": "npm run compile && sls offline start",
    "test": "npm run compile && jasmine",
    "test:jasmine-coverage": "c8 npm run test",
    "prepare": "husky install",
    "sonar-scanner": "node_modules/sonar-scanner/bin/sonar-scanner"
  },
  "dependencies": {
    "@aws-sdk/client-secrets-manager": "^3.435.0",
    "@dvsa/mes-microservice-common": "1.1.0",
    "axios": "^1.6.5",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "oracledb": "^6.2.0"
  },
  "devDependencies": {
    "@dvsa/mes-test-schema": "3.42.5",
    "@types/aws-lambda": "^8.10.125",
    "@types/jasmine": "^5.1.1",
    "@types/node": "^18.18.6",
    "@types/oracledb": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "axios-mock-adapter": "^1.22.0",
    "c8": "^8.0.1",
    "eslint": "^8.52.0",
    "eslint-plugin-import": "^2.28.1",
    "husky": "^8.0.3",
    "jasmine": "^5.1.0",
    "jasmine-spec-reporter": "^7.0.0",
    "lint-staged": "^15.0.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.5",
    "serverless": "^3.35.2",
    "serverless-offline": "^13.2.0",
    "serverless-webpack": "^5.13.0",
    "sonar-scanner": "^3.1.0",
    "source-map-support": "^0.5.21",
    "ts-loader": "^9.5.0",
    "ts-node": "^10.9.1",
    "typemoq": "^2.1.0",
    "typescript": "^5.2.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "yamljs": "^0.3.0",
    "snyk": "^1.1269.0"
  },
  "c8": {
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "exclude": [
      "**/__mocks__/*",
      "**/__tests__/*"
    ],
    "exclude-after-remap": false,
    "sourceMap": true,
    "produce-source-map": true,
    "instrument": true
  },
  "lint-staged": {
    "./src/**/*.ts": [
      "npm run lint:fix"
    ]
  }
}
